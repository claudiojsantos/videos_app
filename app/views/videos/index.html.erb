<%= render 'header' %>
<main>
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-md-12 text-center">
      <h3>Sua Coleção de Vídeos</h3>
    </div>
  </div>

  <table class="table">
    <thead class="thead-dark">
    <tr>
      <th>Author</th>
      <th>Name</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.user.name %></td>
        <td><%= video.name %></td>
        <td><%= video.views %></td>
        <td><%= link_to video do %> <i class="fa fa-eye fa-lg"></i> <% end %></td>
        <td><%= link_to edit_video_path(video) do %> <i class="fa fa-edit fa-lg"></i> <% end %></td>
        <td><%= link_to video, method: :delete, data: {confirm: 'Are you sure?'} do %> <i class="fa fa-trash fa-lg"></i> <% end %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
<div class="col-md-12 text-right">
  <%= link_to 'New Video', new_video_path, class: 'btn btn-danger', style: 'color: white' %>
</div>

  <nav class="navbar fixed-bottom navbar-light bg-light text-center">
    <a class="navbar-brand" href="#">Projeto desenvolvimento por Cláudio Santos - cljos@hotmail.com</a>
  </nav>
</main>

